{% extends "AssoMakerBaseBundle::layout.html.twig"  %}
{% set pageTitle = 'Liste des Projets' %}

{% block content %}
<div class="row-fluid">
    <h3>Liste des Projets</h3>
    <a class="btn btn-success" href="{{ path('sponso_projet_new') }}"><i class="icon-plus"></i> Nouveau Projet</a>


     <table class="table">
         <thead>      
            <th>Equipe</th> 
            <th>Nom du Projet</th>
            <th>Contacts entreprise</th>
         </thead>
         <tbody>
             {% for projet in projets %}
             <tr>
                 <td>{{ projet.equipe }}</td>
                 <td>{{ entitiesMacro.projet(projet) }}</td>
                 <td>
                     <ul>
                         {% for avancement in projet.avancements %}
                             <li><a href="{{path("sponso_avancement_edit",{"id":avancement.id})}}">{{ avancement.entreprise }}{% if avancement.nom %} {{avancement.nom}}{% endif %}</a>, <i>{{ avancement.messageStatut }}</i> géré par {{ avancement.responsable }}</li>
                         {% endfor %}
                 </td>
             </tr>
             {% endfor %}
         </tbody>
            
    
    </table>

</div>
{% endblock %}