{% extends "AssoMakerBaseBundle::layout.html.twig"  %}
{% set pageTitle = entity.entreprise %}

{% block content %}
	<div id="editModal" class="modal hide fade">
  <form class="form-horizontal" action="{{ path('sponso_avancement_edit', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Éditer les infos</h3>
    </div>
  <div class="modal-body">
    
		<div class="row-fluid">
				<fieldset>
					    <div class="control-group">
					    {{ form_widget(form) }}
					    </div>
				</fieldset>
	    </div>
	{{ form_widget(form._token) }}
	
  </div>
  <div class="modal-footer">
    
    <div class="btn-toolbar">
	        <button class="btn btn-primary" type="submit">Enregistrer les modifications</button>
	        <button class="btn" data-dismiss="modal" aria-hidden="true">Annuler</button>
	</div>
  </div>
  </form>
</div>
<div id="noteModal" class="modal hide fade">
<form class="form-horizontal" action="{{ path('sponso_avancement_addNote', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Ajouter une note</h3>
  </div>
  <div class="modal-body">
    
		<div class="row-fluid">
				<fieldset>
				    <div class="control-group">

				    
				    {{ form_row(formNote.type) }}
				    {{ form_label(formNote.texte)  }}
					{{ form_widget(formNote.texte, {'attr':{'class':'winput'}})  }}
					{{ form_widget(formNote) }}
				    </div>
				</fieldset>
	    </div>
	{{ form_widget(formNote._token) }}

  </div>
  <div class="modal-footer">
    
    <div class="btn-toolbar">
	        <button class="btn btn-success" type="submit" name="action" value="save">Enregistrer</button>
	        <button class="btn" data-dismiss="modal" aria-hidden="true">Annuler</button>
	</div>
	<div class="btn-toolbar">
	{% if entity.statut == 0 %}
		    <button type="submit" name="action" value="valid" class="btn btn-primary" ><i class="icon-arrow-right"></i> Soumettre le dossier à validation</button>
		{% endif %}
		{% if entity.statut == 1 and is_granted('ROLE_ADMIN') %}
		    <button type="submit" name="action" value="valid" class="btn btn-primary" ><i class="icon-arrow-right"></i> Valider le dossier</button>
		    <button type="submit" name="action" value="invalid" class="btn btn-warning" ><i class="icon-arrow-left"></i> Invalider le dossier</button>
		{% endif %}
		{% if entity.statut == 2 %}
		    <button type="submit" name="action" value="valid" class="btn btn-primary" ><i class="icon-arrow-right"></i> Dossier envoyé</button>
		{% endif %}
		{% if entity.statut == 3 %}
		    <button type="submit" name="action" value="valid" class="btn btn-primary" ><i class="icon-arrow-right"></i> Rendez-vous pris</button>
		{% endif %}
		{% if entity.statut == 4 %}
		    <button type="submit" name="action" value="valid" class="btn btn-primary" ><i class="icon-arrow-right"></i> Négociations terminées</button>
		{% endif %}
		{% if entity.statut == 5 and is_granted('ROLE_ADMIN') %}
		    <button type="submit" name="action" value="valid" class="btn btn-primary" ><i class="icon-arrow-right"></i> Convention signée</button>
		{% endif %}
		{% if entity.statut == 6 %}
		    <button type="submit" name="action" value="valid" class="btn btn-primary" ><i class="icon-arrow-right"></i> Infos transmises à l'orga</button>
		{% endif %}
		{% if entity.statut == 7 and is_granted('ROLE_ADMIN')%}
		    <button type="submit" name="action" value="valid" class="btn btn-primary" ><i class="icon-arrow-right"></i> Valider</button>
		    <button type="submit" name="action" value="invalid" class="btn btn-warning" ><i class="icon-arrow-left"></i> Invalider</button>
		{% endif %}
		{% if entity.statut == 8 %}
		    <button type="submit" name="action" value="valid" class="btn btn-primary" ><i class="icon-arrow-right"></i> Prestation exécutée</button>
		{% endif %}
		{% if entity.statut == 9 %}
		    <button type="submit" name="action" value="valid" class="btn btn-primary" ><i class="icon-arrow-right"></i> Documentation rédigée pour l'an prochain</button>
		{% endif %}
		{% if entity.statut == 10 or entity.statut == -1 %}
		    <button type="submit" name="action" value="valid" class="btn btn-primary" ><i class="icon-arrow-right"></i> Relancer le projet</button>
		{% endif %}
		{% if entity.statut != -1 and is_granted('ROLE_ADMIN') %}
		    <button type="submit" name="action" value="cancel" class="btn btn-danger" ><i class="icon-remove"></i> Annuler le projet</button>
		{% endif %}
	</div>
  </div>
  	</form>
</div>

<div class="row-fluid">
<div class="span4">
<h3>Projet <a href="{{ path('sponso_projet_edit', { 'id': entity.projet.id }) }}" >{{entity.projet}}</a> - {{ entity.entreprise }}</h3>
État : {{ entity.messageStatut }}
<h4>Responsable : {{ entity.responsable }}</h4>

{% if entity.nom %}
<div class="well">
    <h4>Contact : {{ entity.entreprise }}{% if entity.nom %} ({{entity.nom}}{% if entity.poste %} <small>{{entity.poste}}</small>{% endif %}){% endif %}</h4>
    <ul>
        {% if entity.telephone %}<li>{{ entity.telephone }}</li>{% endif %}
        {% if entity.email %}<li>{{ entity.email }}</li>{% endif %}
        {% if entity.adresse %}<li>{{ entity.adresse }}</li>{% endif %}
    </ul>
</div>
{% endif %}

</div>
<div class="span8">
<h3>Notes</h3>
{% for note in entity.notes %}
<div style="margin-top: .5em"><b>{{ note.orga }} </b><small>{{ note.date |format_datetime('EEEE dd MMM HH:mm')}} : </small> {{ note.texte | raw}}</div>
{% endfor %}
</div>

</div>
<div class="form-fluid">
			<div class="form-actions">
    			
    			<a href="#editModal" role="button" class="btn" data-toggle="modal"><i class="icon-pencil"></i>Éditer les infos du contact</a>
    			<a href="#noteModal" role="button" class="btn btn-success" data-toggle="modal"><i class="icon-plus"></i>Ajouter une note</a>

    			
			</div>
    </div>   
	
{% endblock %}
