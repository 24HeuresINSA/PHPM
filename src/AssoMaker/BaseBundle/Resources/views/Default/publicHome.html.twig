{% extends "AssoMakerBaseBundle::layout.html.twig"  %}

{% block content %}
    <div class="row-fluid">
        <div class="span6">
            <h1>Bienvenue sur PlanningMaker</h1>
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="alert alert-error">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="alert alert-warning">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <p>Connecte-toi avec l'un des services suivants si tu as déjà un compte :</p>
            <div id="logins">
                <p>
                    <a class="btn btn-danger btn-large" href="{{ hwi_oauth_login_url('google') }}">Se connecter avec Google</a>
                </p>
            </div>
            <p>Sinon, pour tout problème ou pour t'inscrire, contacte le responsable : <a href="mailto:{{ admin_email }}">{{ admin_email }}</a></p>

        </div>
        <div class="span6" style="min-width: 700px;">
            <div class="hero-unit">
                {{ phpm_contenu_page_principale |raw}}
            </div>
        </div>
    </div>
{% endblock %}

