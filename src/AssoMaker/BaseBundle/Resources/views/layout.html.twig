{% import "AssoMakerBaseBundle:Macros:entities.html.twig" as entitiesMacro %}

{% macro navBarItem(nom,route,params) %}
{% if params !="" %}
<li{% if route == app.request.attributes.get('_route') %} class="active" {% endif %}><a href="{{ path(route,params) }}">{{ nom| raw }}</a></li>
{% else %}
<li{% if route == app.request.attributes.get('_route') %} class="active" {% endif %}><a href="{{ path(route) }}">{{ nom | raw}}</a></li>
{% endif %}
{% endmacro %}
<!DOCTYPE html>
<html>
    <head>
        {% block head %}
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% if pageTitle is defined %}{{ pageTitle }} - {% endif %}PHPlanningMaker</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        {# c'est pas très beau - on met un code 'générique' dans un block - mais à priori la seule méthode #}
        {% block style %}
			
			{# Twitter Bootstrap Code #}
				<link rel="stylesheet" media="all" href="{{ asset('vendor/twitter/bootstrap/css/bootstrap.min.css') }}" type="text/css" />
				<link rel="stylesheet" media="print" href="{{ asset('vendor/twitter/bootstrap/css/bootstrap.min.css') }}" type="text/css" />
				<style type="text/css">
					{% block pageStyle %}

				      body {
				        padding-top: 60px;
				        padding-bottom: 40px;
				      }
				      .sidebar-nav {
				        padding: 9px 0;
				      }

				    {% endblock %}
			    </style>
				<link rel="stylesheet" href="{{ asset('vendor/twitter/bootstrap/css/bootstrap-responsive.min.css') }}" type="text/css" />
				<style type="text/css"> [class^="icon-"], [class*=" icon-"] {background-image:none;} </style>
                <link rel="stylesheet" href="{{ asset('vendor/fortawesome/font-awesome/css/font-awesome.min.css') }}" type="text/css" />
                
        	{# Rewritten CSS #}
        	
				{% stylesheets
				'@AssoMakerPHPMBundle/Resources/public/css/config.less'
				'@AssoMakerPHPMBundle/Resources/public/css/style.less'
				'@AssoMakerPHPMBundle/Resources/public/css/tache.less'
					filter='lessphp'
				%}
					<link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen" />
				{% endstylesheets %}
			

			
			{# Not rewritten stylesheets #}
				{% stylesheets
				'vendor/akzhan/jwysiwyg/jquery.wysiwyg.css'
				'vendor/jquery/jqueryui/themes/base/minified/jquery-ui.min.css'
				'bundles/assomakerphpm/css/images.css'
				
				filter='cssrewrite'
				%}
					<link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen" />
				{% endstylesheets %}
		{% endblock %}
		
		{# même chose pour Javascript, bien le mettre APRES à cause de LESS #}

			{% javascripts
			    '@AssoMakerPHPMBundle/Resources/public/js/lib/jquery.min.js'
                '@AssoMakerPHPMBundle/Resources/public/js/lib/jquery-ui.min.js'
				'vendor/twitter/bootstrap/js/bootstrap.min.js'
				'vendor/angular/angularJS/angular.min.js'
				
				'@AssoMakerPHPMBundle/Resources/public/js/lib/jquery-ui-i18n.min.js'

				output="js/lib.js"
			%}
			
				<script src="{{ asset_url }}" type="text/javascript"></script>
			{% endjavascripts %}

        

        
        			{% javascripts
				'vendor/trentrichardson/jquerytimepickeraddon/jquery-ui-timepicker-addon.js'
