				'vendor/akzhan/jwysiwyg/jquery.wysiwyg.js'
				
				output="js/lib2.js"
			%}
			
				<script src="{{ asset_url }}" type="text/javascript"></script>
			{% endjavascripts %}
        
			{% javascripts
				
				'@AssoMakerPHPMBundle/Resources/public/js/general.js'
				'@AssoMakerPHPMBundle/Resources/public/js/ui.js'
				output="js/app2.js"
			%}
			
				<script src="{{ asset_url }}" type="text/javascript"></script>
			{% endjavascripts %}

        

        {% endblock %}
