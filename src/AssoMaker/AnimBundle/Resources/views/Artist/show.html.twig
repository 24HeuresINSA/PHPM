{% extends "AssoMakerBaseBundle::layout.html.twig" %}

{% block body -%}
    <h1>Artist</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Stage</th>
                <td>{{ entity.stage }}</td>
            </tr>
            <tr>
                <th>Horaires</th>
                <td>{{ entity.horaires }}</td>
            </tr>
            <tr>
                <th>Mainpictureurl</th>
                <td>{{ entity.mainPictureUrl }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('artist') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('artist_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
