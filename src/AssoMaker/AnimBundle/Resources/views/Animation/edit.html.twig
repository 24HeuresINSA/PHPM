{% extends "AssoMakerBaseBundle::layout.html.twig"  %}

{% block content %}
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAZDxtSjmKe1AsGme00GmrIsRCd2e1IxMw&sensor=false"></script>
<script>
  var map;
  function initialize() {
	var latlng = new google.maps.LatLng($("#assomaker_animbundle_animationtype_locX")[0].value,$("#assomaker_animbundle_animationtype_locY")[0].value);
    var mapOptions = {
      zoom: 17,
      mapTypeControl: false,
	  zoomControl: true,
	  streetViewControl: false,
	  panControl: false,
      center: latlng,
      scrollwheel: false,
	  mapTypeId: google.maps.MapTypeId.SATELLITE
    };
    map = new google.maps.Map(document.getElementById('map_canvas'),
        mapOptions);

    google.maps.event.addListener(map, 'center_changed', function() {
    	$("#assomaker_animbundle_animationtype_locX")[0].value = map.getCenter().lat();
    	$("#assomaker_animbundle_animationtype_locY")[0].value = map.getCenter().lng();
	});
	var marker = new google.maps.Marker({
		map: map, icon: new google.maps.MarkerImage('{{ asset('bundles/assomakeranim/images/cross.png') }}', undefined, undefined, new google.maps.Point(20,20))
	});
	marker.bindTo('position', map, 'center'); 

	var reset =  function() {
		 map.setCenter(new google.maps.LatLng(45.783562,4.876239));	
  }


	  
  }

  
  google.maps.event.addDomListener(window, 'load', initialize);
</script>

<script type="text/javascript">
function Ctrl($scope){

	$scope.horaires = {{ entity.horaires | raw}};
	$scope.addHoraire = function(){
		$scope.horaires.push({"jour":"samedi","debut":"10h00","fin":"18h00"});
		}

	
	
	{% if entity.public %}
	$scope.pub=true;
	{% endif %}

	{% if entity.extPresent %}
	$scope.extPresent=true;
	{% endif %}
}
</script>

<form class="form-inline" action="{{ path('anim_animation_edit',{"id":entity.id}) }}" method="post" {{ form_enctype(form) }} >
    <div class="row-fluid" ng-app ng-controller="Ctrl">

        <div class="span6">
    		<fieldset>
                
                   
                    <legend> Animation {{ entity.nom }} - Infos Générales</legend>
                        <div class="row-fluid">
                            <div class="span4">{{ form_row(form.nom) }}</div>                            
                            <div class="span4">{{ form_row(form.equipe) }}</div>                            
                            <div class="span4">{{ form_row(form.lieu) }}</div>
                        </div>
                        <div class="row-fluid">
                            <div class="span6">{{ form_row(form.responsable) }}</div>
                            <div class="span6">{{ form_row(form.orgaManif) }}</div>
                        </div>

            
            </fieldset>
            <fieldset>
                
                    
                    <legend>Infos Publiques</legend>
                    
                        <div class="row-fluid">
                            <div class="span4">{{ form_row(form.public,{'attr':{'ng-model':'pub'}} ) }}</div>
                            <div class="span4" ng-show="pub">{{ form_row(form.animPhare) }}</div>
                            <div class="span4" ng-show="pub">{{ form_row(form.animGosses) }}</div>
                        </div>
                        <div class="row-fluid" ng-show="pub">
                            <div class="span12">{{ form_row(form.description) }}</div>
                        </div>
            
            </fieldset>
            
            <fieldset>
                
                    
                    <legend>Emplacement</legend>
                        <div class="row-fluid">
                            <div class="span12">
                            <div id="map_canvas" class="span12" style="height:200px">
                            </div>
                            </div>
                        </div>
            
            </fieldset>
            
        
        
            
            	        
        </div>
        <div class="span6">
        <div class="row-fluid">
            <fieldset>
                <legend>Intervenant Extérieur</legend>
                <div class="row-fluid">
                    <div class="span6">{{ form_row(form.extType) }}</div>
                    <div class="span6">{{ form_row(form.extNom) }}</div>
                </div>
                <div class="row-fluid">
                    <div class="span6">{{ form_row(form.extTelephone) }}</div>
                    <div class="span6">{{ form_row(form.extEmail) }}</div>
                </div>
            
            <div class="row-fluid">
                <div class="span12">{{ form_row(form.extCommentaire) }}</div>
            </div>
            <div class="row-fluid">
                <div class="span3">{{ form_row(form.extPresent,{'attr':{'ng-model':'extPresent'}}) }}</div>
                <div class="span3" ng-show="extPresent">{{ form_row(form.extBoisson) }}</div>
                <div class="span3" ng-show="extPresent">{{ form_row(form.extBouffe) }}</div>
                <div class="span3" ng-show="extPresent">{{ form_row(form.extCatering) }}</div>
            </div>
            </fieldset>
            </div>
                    <div class="row-fluid">
            <fieldset>
                <legend>Horaires</legend>
                <div class="row-fluid">
                 <ul>
                    <li ng-repeat="h in horaires">                      
                      <span>{%raw%}<input ng-model="h.jour"><input ng-model="h.debut"><input ng-model="h.fin">{% endraw %}</span>
                    </li>
                  </ul>
                </div>
                
                <div class="btn-toolbar">
                    <a class="btn btn-success" ng-click="addHoraire()"><i class="icon-plus"></i></a>
                </div>
            
            
            </fieldset>
            </div>
        </div>
        
        <input type="hidden" id="assomaker_animbundle_animationtype_horaires" name="assomaker_animbundle_animationtype[horaires]" value="{% raw %}{{ horaires }}{% endraw %}">
        {{ form_widget(form.locX) }}
        {{ form_widget(form.locY) }}
        {{ form_widget(form._token) }}
    </div>	
    
    <div class="form-fluid">
			<div class="form-actions">
			    <button class="btn btn-primary" type="submit">Enregistrer les modifications</button>
			</div>
    </div>       
</form>
{% endblock %}