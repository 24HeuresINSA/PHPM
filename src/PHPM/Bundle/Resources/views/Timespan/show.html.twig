<h1>Timespan</h1>


<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Begintime</th>
            <td>{{ entity.begintime|date('l H:i') }}</td>
        </tr>
        <tr>
            <th>Endtime</th>
            <td>{{ entity.endtime|date('l H:i') }}</td>
        </tr>
        <tr>
            <th>Orgasneeded</th>
            <td>{{ entity.orgasneeded }}</td>
        </tr>
    </tbody>
</table>
<h3>Affected Orgas</h3>

 {% for hour in hours %}
{{ hour.t|date('l H:i') }} <br/>
{{ hour.o }}<br/>
    {% endfor %}

<ul class="record_actions">
    <li>
        <a href="{{ path('timespan') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('timespan_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('timespan_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
