{% extends "PHPMBundle:DisponibiliteInscription:layout.html.twig"  %}
{% set pageTitle = 'Liste des DI' %}
{% use "PHPMBundle::index.html.twig" %}

{% block pageHeader %}
{% endblock %}

{% block content %}
    <div class="row-fluid">       
    	<div class="page-header">
         	<h1>Liste des DI</h1>
         </div>
    </div>
    
    <div class="row-fluid"> 
		<table class="table table-condensed">
		    <thead>
		        <tr>
		            <th>Horaires</th>
		            <th>Total Orgas</th>
		            <th>Actions</th>
		        </tr>
		    </thead>
		    <tbody>
			    {% for entity in entities %}
		           <tr>
		               <td>
			               {{ entity.debut |format_datetime('EEEE dd MMM Y HH:mm')}}<i class="icon-arrow-right"></i>
			               {{ entity.fin |format_datetime('EEEE dd MMM HH:mm')}}
		               </td>
		               <td>{{ entity.orgas.count }}</td>
		               <td>
		               <a class="btn" href="{{ path('disponibiliteinscription_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i> Ã‰diter</a>
				       <a class="btn  btn-danger" href="{{ path('disponibiliteinscription_delete', { 'id': entity.id }) }}"><i class="icon-remove"></i> Supprimer</a>
		               </td>
		           </tr>
			     {% endfor %}
		    </tbody>
		</table>
	</div>
{% endblock %}


