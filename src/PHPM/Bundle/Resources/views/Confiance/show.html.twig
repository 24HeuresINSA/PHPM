{% extends "::base.html.twig"  %}

{% block title %}
	Confiance -> D&eacute;tails des niveaux
{% endblock %}

{% block content %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.nom }}</td>
        </tr>
        <tr>
            <th>Valeur</th>
            <td>{{ entity.valeur }}</td>
        </tr>
        <tr>
            <th>Couleur</th>
            <td>{{ entity.couleur }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}

{% block menu_action %}
<ul class="record_actions">
    <li>
        <a href="{{ path('confiance') }}">
              Revenir &agrave; la liste
        </a>
    </li>
    <li>
        <a href="{{ path('confiance_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('confiance_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
