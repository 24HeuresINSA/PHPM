{% extends "::base.html.twig"  %}

{% block title %}
	Confiance -> Edition
{% endblock %}

{% block content %}
<form action="{{ path('confiance_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>
{% endblock %}

{% block menu_action %}
<ul class="record_actions">
    <li>
        <a href="{{ path('confiance') }}">
            Revenir &agrave; la liste
        </a>
    </li>
    <li>
        <form action="{{ path('confiance_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
