{% extends "::base.html.twig"  %}
{% block content %}
{% import "::macro_bouton_edit.html.twig" as bouton_edit %}
<h1>Liste des indices de confiance</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Valeur</th>
            <th>Couleur</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('confiance_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nom }}</td>
            <td>{{ entity.valeur }}</td>
            <td>{{ entity.couleur }}</td>
            <td>
				{{ bouton_edit.bouton_edit( path('confiance_edit', { 'id': entity.id }) ) }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

{% block menu_action %}
<ul>
    <li>
        <a href="{{ path('confiance_new') }}">
            Cr&eacute;er un nouvel indice de confiance
        </a>
    </li>
</ul>
{% endblock %}
