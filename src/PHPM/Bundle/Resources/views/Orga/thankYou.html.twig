{% extends "PHPMBundle::layout.html.twig"  %}
{% set pageTitle = 'Merci !' %}

{% block pageHeader %}
{% endblock %}

{% block content %}
<div class="row-fluid">       
        	<div class="page-header">
	        	<h1>Merci!</h1>
	        </div>
</div>
<div class="row-fluid">
	{% if stats.PCMax ==0 %}
       	<div class="alert alert-block alert-info fade in">
            <h4 class="alert-heading">Il n'est pas encore possible de renseigner de disponibilit√©s.</h4>
        </div>
	{% else %}
		<div class="well">
			<h2>Ton charisme :</h2>
			<div class="progress progress-success progress-striped">
		        <div id="barreCharisme" class="bar"></div>
		        <script type="text/javascript">
				$('#barreCharisme').attr('style',"width: {{ stats.PCOrga/stats.PCMax*100 }}%");
		        </script>
		    </div>
		    <div style="text-align: center; font-size: x-large;">
		    	<div >Points de charisme : {{ stats.PCOrga}}/{{stats.PCMax }}</div><br>
		    	Classement : {{ stats.rangCharisme}}/{{stats.nbOrgas }}
		    	</div>
		
		</div>
</div>

	{% endif %}



{% endblock %}
