{% extends 'PHPMBundle:Orga:liste.html.twig' %}

{% block thead %}
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Disponibilit&eacute;</th>
                <th>Temps dispo (en h)</th>
                <th>Commentaire</th>
                <th>Validation</th>
{% endblock %}
{% block tbody %}
        <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.telephone }}</td>
                <td>{{ entity.email }}</td>
                <td>
                	<ul>
                		{% for dispo in entity.disponibilite %}
                			<li>{{ dispo.debut }} -- {{ dispo.fin }}</li>
                		{% endfor %}
                	</ul>
                </td>
    
                <td>{{ entity.tempsDisponibleTotal}}</td>
                <td>{{ entity.commentaire}}</td>
                <td>
                
                <label for="v{{ entity.id}}">Valider</label> <input type="radio" name="{{ entity.id}}" value="1" id="v{{ entity.id}}" checked/> <br/>
                 <label for="a{{ entity.id}}">Attendre</label><input type="radio" name="{{ entity.id}}" value="0" id="a{{ entity.id}}"/> <br/>
                 <label for="s{{ entity.id}}">Supprimer</label><input type="radio" name="{{ entity.id}}" value="2" id="s{{ entity.id}}" /><br/>
                 
                 
                 
                 </td>


{% endblock %}



            	
