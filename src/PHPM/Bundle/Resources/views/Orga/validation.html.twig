{% extends "PHPMBundle:Orga:layout.html.twig"  %}
{% set pageTitle = 'Import' %}

{% block editAction %}
{% endblock %}

{% block deleteAction %}
{% endblock %}

{% block newAction %}
{% endblock %}

{% block content %}

{% if entities%}

<form method="POST" >
    
    <table class="records_list">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Disponibilit&eacute;</th>
                <th>Temps dispo (en h)</th>
                <th>Commentaire</th>
                <th>Validation</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>           
                <td>{{ entity['nom'] }}</td>
                <td>{{ entity['prenom'] }}</td>
                <td>{{ entity['telephone'] }}</td>
                <td>{{ entity['email'] }}</td>
                <td>
                	<ul>
                		{% for dispo in entity['disponibilite'] %}
                			<li>{{ dispo['debut'] }} -- {{ dispo['fin'] }}</li>
                		{% endfor %}
                	</ul>
                </td>
    
                <td>{{ entity['tempsDisponibleTotal']}}</td>
                <td>{{ entity['commentaire']}}</td>
                <td> <input type="radio" name="{{ entity['id']}}" value="1" checked/> Valider </td>
                <td> <input type="radio" name="{{ entity['id']}}" value="0"/> EnAttente </td>
                <td> <input type="radio" name="{{ entity['id']}}" value="2"/> Supprimer </td>                                
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <input type="Submit" value="Valider" />
    </form> 
   
	<p>	Veuillez les valider pour pouvoir les affecter. </p>
{% else%}
<p> Aucun orga &agrave; ajouter ! </p>

	
{% endif %}

    
{% endblock %}