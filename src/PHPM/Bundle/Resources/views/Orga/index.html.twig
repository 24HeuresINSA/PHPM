{% extends "::base.html.twig"  %}

{% block title %}
	Orgas -> Liste des orgas
{% endblock %}

{% block content %}
{% import "::macro_bouton_edit.html.twig" as bouton_edit %}

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Surnom</th>
            <th>Telephone</th>
            <th>Email</th>
            <th>Datedenaissance</th>
            <th>Departement</th>
            <th>Commentaire</th>
            <th>Permis</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr style="cursor:pointer" onclick="window.location='{{ path('orga_show', { 'id': entity.id }) }}'">
            <td><a href="{{ path('orga_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nom }}</td>
            <td>{{ entity.prenom }}</td>
            <td>{{ entity.surnom }}</td>
            <td>{{ entity.telephone }}</td>
            <td>{{ entity.email }}</td>
            <td>{% if entity.dateDeNaissance %}{{ entity.dateDeNaissance|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.departement }}</td>
            <td>{{ entity.commentaire }}</td>
            <td>{{ entity.permis }}</td>
            
            <td>
            	{{ bouton_edit.bouton_edit( path('orga_edit', { 'id': entity.id }) ) }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}

{% block menu_action %}
<ul>
    <li>
        <a href="{{ path('orga_new') }}">
            Cr&eacute;er un nouvel orga
        </a>
    </li>
</ul>
{% endblock %}

