{% extends "PHPMBundle:Orga:layout.html.twig"  %}
{% set pageTitle = 'Inscription Orga Soft' %}



{% block body %}
<form class="form-horizontal" action="{{ path('orga_registersoft') }}" method="post" {{ form_enctype(form) }}>
<div class="container-fluid">
	<div class="row-fluid">
		<h1>Inscription Orga Soft</h1>
		<hr>
	</div>
	
	<div class="row-fluid">
		<div class="well">
			<fieldset>
			    <legend>Renseignements Obligatoires</legend>
				    <div class="control-group">
					{{ form_widget(form.prenom) }} {{ form_widget(form.nom) }}<br>
				    </div>

				    <div class="control-group {% if form_errors(form.email)|length > 0 %}error{% endif %}">
			            <div class="">
			              {{ form_widget(form.email) }}
			              <span class="help-inline">{{ form_errors(form.email) }} </span>
			            </div>
         			</div>
         			
         			<div class="control-group {% if form_errors(form.telephone)|length > 0 %}error{% endif %}">
			            <div class="">
			              {{ form_widget(form.telephone) }}
			              <span class="help-inline">{{ form_errors(form.telephone) }} </span>
			            </div>
         			</div>
			</fieldset>
		</div>
		<div class="well">
			<fieldset>
		    	<legend>Renseignements Supplémentaires</legend>
			    {{ form_widget(form.surnom) }}
			    {{ form_widget(form.departement) }}<br>
			    {{ form_widget(form.dateDeNaissance) }}
				{{ form_widget(form.datePermis) }}<br>
		        Célibataire            
		        <label class="radio inline">
		          <input type="radio" name="phpm_bundle_orgatype[celibataire]" id="inlineCheckbox1" value="1"> Oui
		        </label>
		        <label class="radio inline">
		          <input type="radio" name="phpm_bundle_orgatype[celibataire]" value="0"> Non
		        </label>
		
			</fieldset>
		</div>
		<div class="well">
			<fieldset>
		    	<legend>Noms des potes avec qui tu veux bosser</legend>
				<textarea id="phpm_bundle_orgatype_amis" name="phpm_bundle_orgatype[amis]" class="row-fluid"></textarea>
		
			</fieldset>
		</div>
    </div>
    
    <div class="form-fluid">
			<div class="form-actions">
				<button class="btn btn-success" type="submit">Continuer »</button>
			</div>
	</div>
    
    {{ form_widget(form._token) }}
</div>
</form>

{% endblock %}
