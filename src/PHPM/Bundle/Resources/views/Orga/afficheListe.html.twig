{% if entities %}
<table class="table">
    <thead>
        <tr>
            <th>Orga</th>
            <th>Date de Naissance</th>
            <th>Date de permis</th>
            <th>Com'</th>
            <th width="10em">Départ</th>
            <th>Divers</th>          
            <th>Privilèges</th>
            {% if app.request.get('statut') ==0  %}<th>Disponibilités</th>{% endif %}
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {%  for entity in entities %}
        <tr>
            <td>{{ entitiesMacro.orga(entity) }}<br>
            {{ entity.telephone }}<br>
            {{ entitiesMacro.orgaEmail(entity.email) }}</td>
            <td>{% if entity.dateDeNaissance %}{{ entity.dateDeNaissance|format_date('dd MMM Y') }}{% endif%}</td>
            <td>{% if entity.datePermis %}{{ entity.datePermis|format_date('dd MMM Y') }}{% endif%}</td>
            <td>{{ entitiesMacro.equipe(entity.equipe) }}</td>
            <td>{{ entity.anneeEtudes }}{{ entity.departement }}</td>
            <td>
            {% if entity.commentaire %}
            <a class="btn  btn-info apopover" href="#" rel="popover" data-content="{{ entity.commentaire }}" data-original-title="Commentaire">Commentaire</a>
            <br>
            {% endif %}
            {% if entity.amis %}
            <a class="btn  btn-info apopover" href="#" rel="popover" data-content="{{ entity.amis }}" data-original-title="Amis">Amis</a>
            {% endif %}
            </td>
            <td>{{ entitiesMacro.orgaPrivileges(entity.privileges) }}</td>
            {% if app.request.get('statut') ==0  %}
             	<td>
	             	<ul>
	             	{% for dispo in entity.disponibilites %}
	             	
	             	<li>{{ dispo.debut |format_datetime('EEEE dd MMM HH:mm') }}
	             	->
	             	{{ dispo.fin |format_datetime('EEEE dd MMM HH:mm') }}
	             	</li>
	             	{% endfor %}
	             	</ul>
             	</td>
            {% endif %}
            <td>
	            <span>
		            <a href="{{ path('orga_edit', { 'id': entity.id }) }}">Éditer</a>
		            <a href="{{ path('orga_inputdispos', { 'id': entity.id }) }}">Dispos</a>
		            <a href="{{ url('orga_affectation', { 'orga_id': entity.id }) }}">Affecter</a>
	            </span>
            </td>
        </tr>
        {%   endfor %}
    </tbody>
</table>
{% endif %}