{% extends "::base.html.twig"  %}

{% block title %}
	Orga -> Planning -> {{ orga.prenom }} {{ orga.nom }}
{% endblock %}

{% block menu_action %}
{% endblock %}

{% block content %}
{% import "::macro_nbToDay.html.twig" as nbToDay %}

<h2>Planning de l'orga :</h2>

<table class="records_list">
    <thead>
        <tr>
        	<th>Prenom</th>
            <th>Nom</th>
            <th>Telephone</th>
            <th>Email</th>
            <th>Nombre heures orga</th>
        </tr>
    </thead>
    <tbody>
  
        <tr>    
            <td>{{ orga.prenom }}</td>       
            <td>{{ orga.nom }}</td>
            <td>{{ orga.telephone }}</td>
            <td>{{ orga.email }}</td>
            <td>{{ orga.email }}</td>
            </td>
        </tr>
    </tbody>
</table>

{% for jour, jourCreneau in creneauxParJour %}
	<h3>Jour : {{nbToDay.nbToDay(jour)}}</h3>
	{%for creneau in jourCreneau %}
	<ul>
		<li>
			<h4>T&acirc;che : {{creneau.plageHoraire.tache}}</h4>
			<p>{{creneau.plageHoraire.tache.consignes}}</p>
		</li>
	</ul>

	{% endfor %}
{% endfor %}


    
{% endblock %}