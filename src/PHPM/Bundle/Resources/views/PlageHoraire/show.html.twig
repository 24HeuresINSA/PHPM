{% extends "::base.html.twig"  %}
{% block content %}
{% block title %}
	Plages horaire -> D&eacute;tails de la plage horaire
{% endblock %}

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Debut</th>
            <td>{{ entity.debut|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Fin</th>
            <td>{{ entity.fin|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}

{% block menu_action %}
<ul class="record_actions">
    <li>
        <a href="{{ path('plagehoraire') }}">
            Revenir &agrave; la liste
        </a>
    </li>
    <li>
        <a href="{{ path('plagehoraire_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('plagehoraire_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}