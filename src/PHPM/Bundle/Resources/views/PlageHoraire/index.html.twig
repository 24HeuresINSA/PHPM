{% extends "PHPMBundle:PlageHoraire:layout.html.twig"  %}
{% set pageTitle = 'Liste des plages horaires' %}
{% use "PHPMBundle::index.html.twig" %}

{% block content %}

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Debut</th>
            <th>Fin</th>
            <th>T&acirc;che</th>
            <th>NbOrgasNecessaires</th>
            <th>Dur&eacute;e</th>
            <th>Recoupement</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr style="cursor:pointer" onclick="window.location='{{ path('plagehoraire_show', { 'id': entity.id }) }}'">
            <td><a href="{{ path('plagehoraire_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.debut %}{{ entity.debut|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.fin %}{{ entity.fin|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.tache %}{{ entity.tache }}{% endif%}</td>
            <td>{{entity.nbOrgasNecessaires}}</td>
            <td>{{ entity.dureeCreneau }}</td>
            <td>{{entity.recoupementCreneau}}</td>
            <td>
				{{ bouton.edit( path('plagehoraire_edit', { 'id': entity.id }) ) }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}