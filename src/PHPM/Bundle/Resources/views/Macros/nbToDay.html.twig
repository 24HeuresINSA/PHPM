{% macro nbToDay(jour) %}
{% if jour == '0' %}
Lundi
{% endif %}
{% if jour == '1' %}
Mardi
{% endif %}
{% if jour == '2' %}
Mercredi
{% endif %}
{% if jour == '3' %}
Jeudi
{% endif %}
{% if jour == '4' %}
Vendredi
{% endif %}
{% if jour == '5' %}
Samedi
{% endif %}
{% if jour == '6' %}
Dimanche
{% endif %}
{% endmacro %}
