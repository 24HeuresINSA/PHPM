{% macro orga(entity) %}
 <a href="{{ path('orga_edit', { 'id': entity.id }) }}">{{ entity.prenom }} {{ entity.nom }}{% if entity.surnom  %} ({{ entity.surnom }}){% endif %}</a>
{% endmacro %}

{% macro groupeTache(entity) %}
 <a href="{{ path('groupetache_edit', { 'id': entity.id }) }}">{{ entity.id }}- {{ entity.nom }}</a>
{% endmacro %}

{% macro tache(tache) %}
<a class="statut{{  tache.statut }}" href="{{ path('tache_edit', { 'id': tache.id }) }}">{{ tache.id }}- {{ tache.nom }}</a>
{% endmacro %}

{% macro tacheCom(tache) %}
{% if tache.commentaires.last.id is defined %}
<span class="lcom"><span class="com_auteur">{{tache.commentaires.last.auteur}}</span><span class="com_heure"> {{ tache.commentaires.last.heure|format_datetime('EEEE dd MMM HH:mm') }} : </span>{{ tache.commentaires.last.texte | raw }}</span>
{% endif %}
{% endmacro %}