{% if entities %}

<table >
    <thead>
        <tr>
            <th>Nom</th>
            <th>Groupe de Tâches</th>
            <th>Équipe</th>
            <th>Responsable</th>
            
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        
            <td><a href="{{ path('tache_edit', { 'id': entity.id }) }}">{{ entity.id }}
            {{ entity.nom }}</a></td>
            <td>{{ entity.groupeTache.nom }}</td>
            <td>{{ entity.groupeTache.equipe.nom }}</td>            
            <td>{{ entity.responsable }}</td>
            <td>
					{{ bouton.edit( path('tache_edit', { 'id': entity.id }) ) }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endif %}
