{% extends "::base.html.twig"  %}
{% block content %}
<h1>Liste des t&acirc;ches</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Lieu</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('tache_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nom }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.lieu }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('tache_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tache_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

{% block menu_actions %}
<ul>
    <li>
        <a href="{{ path('tache_new') }}">
            Cr&eacute;er une nouvelle tache :
        </a>
    </li>
</ul>
{% endblock %}
