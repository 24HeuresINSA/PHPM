{% extends "::base.html.twig"  %}
{% block title %}
	T&acirc;ches -> D&eacute;tails de la T&acirc;che
{% endblock %}

{% block content %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.nom }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.consignes }}</td>
        </tr>
        <tr>
            <th>Lieu</th>
            <td>{{ entity.lieu }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}

{% block menu_action %}
<ul class="record_actions">
    <li>
        <a href="{{ path('tache') }}">
            Revenir &agrave; la liste de t&acirc;ches
        </a>
    </li>
    <li>
        <a href="{{ path('tache_edit', { 'id': entity.id }) }}">
            Editer la t&acirc;che
        </a>
    </li>
    <li>
        <form action="{{ path('tache_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
