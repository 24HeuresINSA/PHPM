{% extends "PHPMBundle:Categorie:layout.html.twig"  %}
{% set pageTitle = 'Liste des Cat√©gories' %}
{% use "PHPMBundle::index.html.twig" %}

{% block content %}
{% import "::macro_bouton_edit.html.twig" as bouton_edit %}
<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Couleur</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr style="cursor:pointer" onclick="window.location='{{ path('categorie_show', { 'id': entity.id }) }}'">
            <td><a href="{{ path('categorie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nom }}</td>
            <td>{{ entity.couleur }}</td>
            <td>
				{{ bouton_edit.bouton_edit( path('categorie_edit', { 'id': entity.id }) ) }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}