{% extends "::base.html.twig"  %}

{% block title %}
	Cat&eacute;gories -> D&eacute;tails cat&eacute;gorie
{% endblock %}

{% block content %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.nom }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}

{% block menu_action %}
<ul class="record_actions">
    <li>
        <a href="{{ path('categorie') }}">
            Revenir &agrave; la liste de cat&eacute;gories
        </a>
    </li>
    <li>
        <a href="{{ path('categorie_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('categorie_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
