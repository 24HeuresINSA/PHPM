{% extends "::base.html.twig"  %}

{% block title %}
	Cat&eacute;gories -> D&eacute;tails cat&eacute;gorie
{% endblock %}

{% block content %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.nom }}</td>
